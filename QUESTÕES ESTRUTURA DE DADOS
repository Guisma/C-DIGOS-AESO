1° Questão
#include <stdio.h>

int main() {
    int segundos, h, m, s, resto;

    printf("Digite uma quantidade de segundos: ");
    scanf("%d", &segundos);
    
    h = segundos / 3600;
    resto = segundos % 3600;
    m = resto / 60;
    s = resto % 60;
    printf("%d Hora(s) %d Minuto(s) %d Segundo(s)\n", h, m, s);

    return 0;
}

2° Questão
#include <stdio.h>


int main()

{

   float a,b,c,m;

   printf("Digite 3 valores \n");

   scanf("%2f",&a);

   scanf("%2f",&b);

   scanf("%2f",&c);

   m = (a+b+c)/3;

   printf("O valor da media eh:%0.2f", m);


   return 0;

}

4° Questão
#include <stdio.h>
int main()
{
    int num;

    printf("Digite um numero: \n");
    scanf("%d", &num);

    if (num%2==0)
        printf("O numero e par.");
    else
        printf("O numero e impar.");
    return 0;
}

5° Questão

#include <stdio.h>

int main() {
    int x,y,z;

    printf("Digite o primeiro valor.\n");
    scanf("%d", &x);
    printf("Digite o segundo valor. \n");
    scanf("%d", &y);
    printf("Digite o terceiro valor.\n");
    scanf("%d", &z);
    
    
    if(x + y > z && x + z > y && y + z > x){
        printf("Os 3 lados formam um triangulo!\n");
        if(x == y && x == z)
        printf("Triangulo Equiliatero\n");
        else
        if(x == y || x == z || y == z)
                printf("Isosceles\n");
            else
                printf("Escaleno\n");
    }
    else
        printf("Os 3 lados NAO formam um trinagulo!\n");
    
    
    
    
    return 0;
}


6° Questão
#include <stdio.h>

int main() {
    int a, b, c;
    printf("Digite 3 numeros:\n");
    scanf("%d %d %d", &a, &b, &c);
    if (a > c) {
        int tmp = c;
        c = a;
        a = tmp;
    }
    if (a > b) {
        int tmp = b;
        b = a;
        a = tmp;
    }
    if (b > c) {
        int tmp = c;
        c = b;
        b = tmp;
    }
    printf("%d %d %d", c, b, a);
}

7° Questão
#include <stdio.h>
#include <stdlib.h>

void main(){

float n1, n2, resultado;
char operacao;

printf("\nInforme uma operaçao(+; -; /; *;): ");
scanf("%c", &operacao);
printf("\nInforme um numero: ");
scanf("%f", &n1);
printf("\nInforme outro numero: ");
scanf("%f", &n2);

switch(operacao)
{
case '+': resultado = n1 + n2;
break;
case '-': resultado = n1 - n2;
break;
case '/': resultado = n1 / n2;
break;
case '*': resultado = n1 * n2;
break;
}

printf("\n %.2f %c %.2f = %.2f", n1, operacao, n2, resultado);

printf("\n\n\n");

}



