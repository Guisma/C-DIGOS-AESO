44° QUESTAO
#include <stdio.h>
#include <math.h>
float RAIZQUADRADA(int numero){
   float result;
   result=pow(numero,0.5);
   return result;   
}
int main (){
    float result,numero;
    printf ("Entre com o valor para saber sua raiz quadrada: ");
    scanf ("%f", &numero);
    result=RAIZQUADRADA(numero);
    printf ("O valor da raiz quadrada e: %.2f",result);
    getchar ();
    getchar ();
    return 0;
}
45° QUESTAO
#include <stdio.h>

int main()
{
    int numero, cifra;
    
    printf("Digite um numero inteiro: \n");
    scanf("%i", &numero);
    
    if (numero >= 0) {
        do {
            cifra = numero % 10;
            printf("%i", cifra);
            numero /= 10;}
            while (numero != 0);
        printf("\n");}
    else if (numero < 1) {
        numero = numero * -1;
        
        printf("-");
        
        do {
            cifra = numero % 10;
            printf("%i", cifra);
            numero /= 10;
        } while (numero != 0);
    printf("-");}
}

47° QUESTAO
#include <stdio.h>

int DIAS(int mes, int ano);

int main(){
  int mes, ano;
  printf("Digite o mes : ");
  scanf("%d",&mes);
  printf("Digite o ano : ");   
  scanf("%d", &ano);
  
  printf("Numero de dias : %d",DIAS(mes,ano));  
    
  printf("\n\n");  
}

int DIAS(int mes, int ano){
   int dias;
   switch (mes) {
     case 1 :
       dias = 31;
       break;
     case 2 :
       if (((ano % 4 == 0) && (ano % 100 != 0)) || (ano % 400 == 0)){   
         printf("\nANO BISSEXTO\n");
         dias = 29;
         }
       else
         dias = 28;   
       break;
     case 3 :
       dias = 31;
       break;
     case 4 :
       dias = 30;
       break;
     case 5 :
       dias = 31;
       break;
     case 6 :
       dias = 30;
       break;
     case 7 :
       dias = 31;
       break;
     case 8 :
       dias = 31;
       break;
     case 9 :
       dias = 30;
       break;
     case 10 :
       dias = 31;
       break;
     case 11 :
       dias = 30;
       break;
     case 12 :
       dias = 31;
       break;                                
          
   } 
   return dias; 

}

48° QUESTAO 
#include<stdio.h>
int jogo(){
 int h1,m1,h2,m2,t;
 printf("Digite a hora e os minutos do inicio do jogo\n");
 scanf("%d%d",&h1,&m1);
 printf("Digite a hora e os minutos do fim do jogo\n");
 scanf("%d%d",&h2,&m2);
 if(h1==h2&&m1==m2)  
 t=1140;
 else{
  if(m1>m2){
   if(h1>h2)
   t=(((h2+24)-h1)*60)+((m2+60)-m1);
   else
   t=((h2-h1)*60)+((m2+60)-m1);
  }
  else{
   if(h1>h2)
   t=(((h2+24)-h1)*60)+(m2-m1);
   else
   t=((h2-h1)*60)+(m2-m1);
  }
 }
 return t; 
}
int main(){
 int partida;
 partida=jogo();
 printf("Tempo de jogo foi %d minutos",partida);
 return 0;
}

50° QUESTAO 
#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>

unsigned int calculaParidade (unsigned char b);

int main()

{

   

   unsigned char nome[101];

   int i;

   printf("Digite uma palavra:\n");

   scanf(" %100[^\n]", nome);

   for(i = 0; nome[i]; i++)

   {

       printf("%c - paridade: %u\n", nome[i], calculaParidade(nome[i]));

   }

   return 0;

}

unsigned int calculaParidade (unsigned char b)

{

   

   int x = (int)b;

   

   int dgs[8];

   int i = 7, j;

   int cont = 0;

   while(x > 1)

   {

      

       dgs[i] = x % 2;

       i--;

       

       x /= 2;

   }

   dgs[i] = x;

   for(j = i; j < 8; j++)

   {

       if(dgs[j] == 1)

       {

          

           cont++;

       }

   }

   if((cont % 2) == 0)

   {

       

       return 0;

   }

   else

   {

       

       return 1;

   }

}
