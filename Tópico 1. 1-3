1째 Quest찾o
#include <stdio.h>

int main() {
    int segundos, h, m, s, resto;

    printf("Digite uma quantidade de segundos: ");
    scanf("%d", &segundos);
    
    h = segundos / 3600;
    resto = segundos % 3600;
    m = resto / 60;
    s = resto % 60;
    printf("%d Hora(s) %d Minuto(s) %d Segundo(s)\n", h, m, s);

    return 0;
}

